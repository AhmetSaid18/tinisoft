{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=tinisoft;Username=postgres;Password=postgres;MinPoolSize=50;MaxPoolSize=200;Connection Lifetime=0;Command Timeout=30;Timeout=30"
  },
  "Redis": {
    "ConnectionString": "localhost:6379"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "TopicPrefix": "tinisoft",
    "ConsumerGroup": "tinisoft-consumers"
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": "5672",
    "UserName": "guest",
    "Password": "guest",
    "ExchangeName": "tinisoft_events"
  },
  "Meilisearch": {
    "Host": "http://localhost:7700",
    "ApiKey": ""
  },
  "Storage": {
    "Provider": "R2",
    "R2": {
      "AccountId": "",
      "AccessKeyId": "",
      "SecretAccessKey": "",
      "BucketName": "tinisoft-assets"
    }
  },
  "PayTR": {
    "MerchantId": "",
    "MerchantKey": "",
    "MerchantSalt": "",
    "BaseUrl": "https://www.paytr.com",
    "TestMode": true
  },
  "SendGrid": {
    "ApiKey": "",
    "FromEmail": "noreply@tinisoft.com",
    "FromName": "Tinisoft"
  },
  "Netgsm": {
    "UserName": "",
    "Password": "",
    "Sender": "TINISOFT"
  },
  "Marketplace": {
    "Trendyol": {
      "ApiUrl": "https://api.trendyol.com/sapigw",
      "SupplierId": "",
      "ApiKey": "",
      "ApiSecret": ""
    },
    "Hepsiburada": {
      "ApiUrl": "https://mpop-sit.hepsiburada.com",
      "MerchantId": "",
      "Username": "",
      "Password": ""
    },
    "N11": {
      "ApiUrl": "https://api.n11.com/ws",
      "ApiKey": "",
      "SecretKey": ""
    }
  },
  "Shipping": {
    "Aras": {
      "ApiUrl": "https://customerservicestest.araskargo.com.tr",
      "Username": "",
      "Password": "",
      "CustomerCode": ""
    },
    "MNG": {
      "ApiUrl": "https://testapi.mngkargo.com.tr",
      "Username": "",
      "Password": "",
      "CustomerNumber": ""
    },
    "Yurtici": {
      "ApiUrl": "https://api.yurticikargo.com",
      "Username": "",
      "Password": "",
      "CustomerNumber": "",
      "ApiKey": ""
    }
  },
  "GIB": {
    "BaseUrl": "https://earsivportaltest.efatura.gov.tr",
    "Username": "",
    "Password": "",
    "TestMode": true
  },
  "Jwt": {
    "SecretKey": "YourSuperSecretKeyForJWTTokenGeneration-ChangeThisInProduction-Minimum32Characters",
    "Issuer": "Tinisoft",
    "Audience": "Tinisoft",
    "ExpirationMinutes": "1440",
    "RefreshTokenExpirationDays": "30"
  },
  "RateLimit": {
    "EnableRateLimiting": true,
    "PermitLimit": 100,
    "WindowInSeconds": 60
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}

