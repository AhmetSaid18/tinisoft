# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://tinisoft.com.tr,https://www.tinisoft.com.tr

# Database - PostgreSQL (Main)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=tinisoft
DB_USER=postgres
DB_PASSWORD=postgres
DB_SCHEMA=public

# Database - Products Service
DB_PRODUCTS_SCHEMA=products

# Database - Inventory Service
DB_INVENTORY_SCHEMA=inventory

# Database - Payments Service
DB_PAYMENTS_SCHEMA=payments

# Database - Orders Service
DB_ORDERS_SCHEMA=orders

# Database - Shipping Service
DB_SHIPPING_SCHEMA=shipping

# Database - Notifications Service
DB_NOTIFICATIONS_SCHEMA=notifications

# Database - Customers Service
DB_CUSTOMERS_SCHEMA=customers

# Database - Marketplace Service
DB_MARKETPLACE_SCHEMA=marketplace

# Database - Invoices Service
DB_INVOICES_SCHEMA=invoices

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# RabbitMQ Event Bus
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Kafka Event Streaming
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_PREFIX=tinisoft

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME=86400
JWT_REFRESH_TOKEN_LIFETIME=604800

# SMTP Email Settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
