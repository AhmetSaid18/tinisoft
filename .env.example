AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# Multi-Tenant Settings
MULTI_TENANT_ENABLED=True
TENANT_RESOLVER=subdomain
DEFAULT_TENANT_SCHEMA=public

# API Gateway
GATEWAY_URL=http://gateway:5000
API_GATEWAY_ENABLED=True

# Service Ports (for local development)
GATEWAY_PORT=5000
PRODUCTS_API_PORT=5001
INVENTORY_API_PORT=5002
PAYMENTS_API_PORT=5003
ORDERS_API_PORT=5004
MARKETPLACE_API_PORT=5005
CUSTOMERS_API_PORT=5006
SHIPPING_API_PORT=5007
NOTIFICATIONS_API_PORT=5008
INVOICES_API_PORT=5009

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/tinisoft.log

# Celery (Background Tasks)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json

# Security
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Timezone
TIME_ZONE=Europe/Istanbul
USE_TZ=True

# Language
LANGUAGE_CODE=tr-tr
USE_I18N=True
USE_L10N=True

# Admin
ADMIN_URL=admin/
SUPERUSER_EMAIL=admin@tinisoft.com.tr
SUPERUSER_PASSWORD=change-this-in-production
