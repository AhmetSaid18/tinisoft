# ============================================
# Tinisoft Django Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# cp env.example .env

# ============================================
# Django Core Settings
# ============================================
SECRET_KEY=django-insecure-tinisoft-2025-production-key-change-this-in-production-abcdefghijklmnopqrstuvwxyz1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZ
DEBUG=True
ALLOWED_HOSTS=api.tinisoft.com.tr,localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=https://tinisoft.com.tr,https://www.tinisoft.com.tr,http://localhost:3000,http://localhost:3001

# ============================================
# Database - PostgreSQL (Tek DB, Multi-Schema)
# ============================================
DB_NAME=tinisoft
DB_USER=postgres
DB_PASSWORD=your-strong-database-password-here
DB_HOST=postgres
DB_PORT=5432
DB_SCHEMA=public

# ============================================
# Redis Cache & Celery
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ============================================
# Multi-Tenant Settings
# ============================================
MULTI_TENANT_ENABLED=True
DEFAULT_TENANT_SCHEMA=public

# ============================================
# Domain Management
# ============================================
DOMAIN_VERIFICATION_TXT_PREFIX=tinisoft-verify
DOMAIN_VERIFICATION_CNAME_TARGET=verify.tinisoft.com.tr
DOMAIN_VERIFICATION_CHECK_INTERVAL=300

# ============================================
# Frontend Build & Deployment
# ============================================
FRONTEND_REPO_URL=
FRONTEND_BUILD_DIR=/app/builds
DOCKER_REGISTRY=
TRAEFIK_API_URL=http://traefik:8080

# ============================================
# Email Settings (SMTP)
# ============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-app-password
EMAIL_FROM_ADDRESS=noreply@tinisoft.com.tr
EMAIL_FROM_NAME=Tinisoft

# ============================================
# Internationalization
# ============================================
LANGUAGE_CODE=tr-tr
TIME_ZONE=Europe/Istanbul

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/tinisoft.log

# ============================================
# Security (Production)
# ============================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ============================================
# Optional: Payment Integration (PayTR)
# ============================================
PAYTR_MERCHANT_ID=
PAYTR_MERCHANT_KEY=
PAYTR_MERCHANT_SALT=
PAYTR_TEST_MODE=True

# ============================================
# Optional: Cargo Integration
# ============================================
ARAS_API_KEY=
ARAS_API_SECRET=
MNG_API_KEY=
MNG_API_SECRET=
YURTICI_API_KEY=
YURTICI_API_SECRET=


