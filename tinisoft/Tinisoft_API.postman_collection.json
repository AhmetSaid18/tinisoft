	"item": [
		{
			"name": "Auth - Owner",
			"item": [
				{
					"name": "Register (Owner)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"owner_token\", jsonData.token || \"\");",
									"    pm.environment.set(\"tenant_id\", jsonData.tenant?.id || \"\");",
									"    pm.environment.set(\"domain_id\", jsonData.domain_id || \"\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"owner@example.com\",\n    \"password\": \"password123\",\n    \"first_name\": \"John\",\n    \"last_name\": \"Doe\",\n    \"phone\": \"+905551234567\",\n    \"store_name\": \"My Store\",\n    \"store_slug\": \"my-store\",\n    \"custom_domain\": \"example.com\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/register/",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"register",
								""
							]
						},
						"description": "Mağaza sahibi (Owner) kaydı. Tenant ve domain oluşturur."
					},
					"response": []
				},
				{
					"name": "Login (Owner)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"owner_token\", jsonData.token || \"\");",
									"    pm.environment.set(\"tenant_id\", jsonData.tenant?.id || \"\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"owner@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/login/",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"login",
								""
							]
						},
						"description": "Mağaza sahibi (Owner) girişi."
					},
					"response": []
				}
			],
			"description": "Owner (mağaza sahibi) authentication endpoints"
		},
