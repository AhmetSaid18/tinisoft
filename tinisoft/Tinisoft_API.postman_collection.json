					"response": []
				},
				{
					"name": "Verify Domain",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    console.log(\"Verification instructions:\", jsonData.domain?.verification_instructions);",
									"}"
								],
