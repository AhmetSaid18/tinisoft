		{
			"name": "Domain Management",
			"item": [
				{
					"name": "List Domains",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{owner_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/domains/",
