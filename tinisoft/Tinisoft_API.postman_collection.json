{
	"info": {
		"_postman_id": "tinisoft-api-collection",
		"name": "Tinisoft API",
		"description": "Tinisoft Multi-Tenant E-Commerce Platform API Collection",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
